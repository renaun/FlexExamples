<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark"
					autoDrawBackground="false">
	
	<!-- IconItemRenderer will probably work better then this renderer, but its to show how you would do it
	   	in MXML and in AS.
	    The IconItemRenderer also implements ContentCache to save on reloading images each time
		NOT THE BEST WAY FOR MOBILE see ImageLabelASRenderer -->
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	<s:BitmapImage source="{data.image}" />
	<s:Label text="{data.label} - {data.image}" />
</s:ItemRenderer>
